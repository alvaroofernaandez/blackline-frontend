---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Welcome to Astro.">
    <h1 class="text-3xl font-bold">Noticias</h1>
    <hr class="my-4 border-gray-300" />
    <table class="w-full border-collapse border border-gray-300">
        <thead>
            <tr>
                <th class="border border-gray-300 p-2">Título</th>
                <th class="border border-gray-300 p-2">Fecha</th>
                <th class="border border-gray-300 p-2">Descripción</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="border border-gray-300 p-2">Ejemplo Noticia</td>
                <td class="border border-gray-300 p-2">2024-12-27</td>
                <td class="border border-gray-300 p-2">Esta es una noticia de prueba.</td>
            </tr>
        </tbody>
    </table>
</Layout>
