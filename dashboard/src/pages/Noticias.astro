---
import Layout from '../layouts/Layout.astro';
import TablaNoticias from '../components/TablaNoticias.jsx';



---

<Layout title="Welcome to Astro.">
    <div class=" flex justify-between">
        <h1 class="text-3xl font-bold">Noticias</h1>
        <button class="bg-blue-950 text-white rounded-lg text-2xl text-center  items-center hover:scale-110 transition-transform duration-200 ease-in-out hover:shadow-xl shadow-md p-2">+</button>
    </div>
    <hr class="my-4 border-gray-300" />
    <TablaNoticias client:load/>
    
</Layout>
