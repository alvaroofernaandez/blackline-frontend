---
import Layout from '../layouts/Layout.astro';
import TablaNoticias from '../components/Noticias/TablaNoticias.jsx';
import { FaPlus } from "react-icons/fa";

---

<Layout title="Welcome to Astro.">
    <div class=" flex justify-between">
        <h1 class="text-3xl font-bold">Noticias</h1>
        <a class="bg-neutral-800 text-white rounded-2xl text-sm text-center items-center hover:scale-110 transition-transform duration-200 ease-in-out hover:shadow-xl shadow-md p-4" href="/AnadirNoticia"><FaPlus /></a>
    </div>
    <hr class="my-4 border-gray-300" />
    <TablaNoticias client:load/>
    
</Layout>
