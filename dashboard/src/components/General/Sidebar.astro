---
import { FaNewspaper } from "react-icons/fa6";
import { IoIosGift } from "react-icons/io";
import { MdOutlineEmail } from "react-icons/md";
import { FaUsers } from "react-icons/fa";
import { FaPaintBrush } from "react-icons/fa";
import { FaCalendarAlt } from "react-icons/fa";
import { GrDocumentPdf } from "react-icons/gr";

---

<nav
    class="bg-neutral-600 dark:bg-neutral-900 border-r dark:border-neutral-700 border-neutral-500 text-white w-64 min-h-screen flex flex-col py-8"
>
    <div class="text-2xl font-bold text-center mb-10 tracking-wide">
        <a href="/"><img src="/favicon.svg" alt="Logo MaezInk" class="w-20 mx-auto" /></a>
    </div>
    <hr class="border-neutral-300 dark:border-neutral-700 mb-6" />

    <ul class="flex flex-col gap-2">
        <li>
            <a
                href="/noticias"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <FaNewspaper className="text-md" />
                Noticias
            </a>
        </li>
        <li>
            <a
                href="/sorteos"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <IoIosGift className="text-md" />
                Sorteos
            </a>
        </li>
        <li>
            <a
                href="/diseños"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <FaPaintBrush className="text-md" />
                Diseños
            </a>
        </li>
        <li>
            <a
                href="/usuarios"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <FaUsers className="text-md" />
                Usuarios
            </a>
        </li>
        <li>
            <a
                href="/citas"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <FaCalendarAlt className="text-md" />
                Citas
            </a>
        </li>
        <li>
            <a
                href="/correo"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <MdOutlineEmail className="text-md" />
                Correo
            </a>
        </li>
        <li>
            <a
                href="/facturas"
                class="flex items-center gap-3 p-3 hover:bg-neutral-500 dark:hover:bg-neutral-700 transition-all duration-200 font-normal text-md"
            >
                <GrDocumentPdf className="text-md" />
                Facturas 
            </a>
        </li>
    </ul>

    <div
        class="mt-auto pt-6 text-xs text-neutral-400 text-center border-t border-neutral-300 dark:border-neutral-700"
    >
        © 2025 
    </div>
</nav>
