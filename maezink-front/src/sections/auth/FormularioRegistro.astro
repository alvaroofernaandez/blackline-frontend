<form>
  <div class="flex flex-col items-center justify-center h-screen">
      <div class="w-96 p-12 text-white">
          <div class="flex justify-center">
            <img src="/logomaezink.avif" transition:name="vtImg" alt="Logo" class="w-40" />
          </div>

          <input type="text" placeholder="Email" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent rounded-md" required />
          <input type="text" placeholder="Nombre" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent rounded-md" required />
          <input type="text" placeholder="Apellidos" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent rounded-md" required />
          <input type="password" placeholder="Contraseña" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent rounded-md" required />
          <input type="password" placeholder="Repite la contraseña" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent rounded-md" required />
            <label class="flex items-center mb-4">
            <input type="checkbox" class="border border-neutral-400 p-2 bg-transparent rounded-md" />
            <span class="ml-2 text-neutral-400 text-sm">Quiero recibir notificaciones por correo</span>
            </label>

          <button type="submit" class="mt-7 bg-neutral-500 hover:bg-neutral-600 transition-all duration-300 text-white p-2 rounded w-full">
            Registrarse
          </button>
      </div>
  </div>
</form>