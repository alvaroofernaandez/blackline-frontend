---

export interface Props {
    title: string;
    description: string;
    price: string;
    time: string;
    size: string;
    imageUrl: string;
}

const { title, description, price, time, size, imageUrl } = Astro.props;
---

<div
    class="rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-sm text-white border border-neutral-700"
>
    <div class="h-[300px] w-full overflow-hidden">
        <img
            src={imageUrl}
            alt={title}
            loading="lazy"
            class="w-full h-full object-cover rounded-t-2xl"
        />
    </div>
    <div class="p-4 flex flex-col gap-4">
        <h2 class="text-xl font-semibold text-white">{title}</h2>
        <hr />
        <p class="text-neutral-300">
            {description}
        </p>
        <div class="flex flex-wrap gap-2">
            <span
                class="inline-flex items-center gap-1 bg-red-100 text-red-700 text-sm font-medium px-3 py-1 shadow-lg"
            >
                <img src="/svg/money.svg" class="h-4 w-4" /><span>{price}</span>
            </span>
            <span
                class="inline-flex items-center gap-1 bg-blue-100 text-blue-700 text-sm font-medium px-3 py-1 shadow-lg"
            >
                <img src="/svg/time.svg" class="h-4 w-4" /><span>{time}</span>
            </span>
            <span
                class="inline-flex items-center gap-1 bg-green-100 text-green-700 text-sm font-medium px-3 py-1 shadow-lg"
            >
                <img src="/svg/size.svg" class="h-4 w-4" /><span>{size}</span
                >
            </span>
        </div>
    </div>
</div>
