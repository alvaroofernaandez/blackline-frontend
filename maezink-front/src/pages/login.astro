---

import Layout from '../layouts/Layout.astro'
---

<Layout title="Maez Ink - Login" >
    <form>
        <div class="flex flex-col items-center justify-center h-screen ">
            <div class="border rounded shadow-md w-96 p-12">
                <h2 class="text-2xl font-bold mb-4 text-center">Login</h2>
                <input type="text" placeholder="Username" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent" required />
                <input type="password" placeholder="Password" class="border border-neutral-400 p-2 mb-4 w-full bg-transparent" required />
                <button type="submit" class="bg-blue-500 text-white p-2 rounded w-full">Login</button>
            </div>
        </div>
    </form>
</Layout>