---
import CardDisenos from "../components/diseños/CardDiseños.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Maez Ink - Diseños">
  <img src="/logomaezink.png" transition:name="vtImg" alt="logo" class="mt-10 mx-auto w-32 xl:w-48 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg" loading="lazy">
  <div>
    <h1 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold mt-10">Diseños</h1>
    <p class="text-center text-sm md:text-base lg:text-lg mt-5">Aquí puedes ver algunos de nuestros diseños más populares.</p>

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mt-10 px-4">
      <CardDisenos title="Diseño manga" description="Diseño detallado de manga con estilo único." imageUrl="/galeria/WhatsApp Image 2025-03-25 at 20.34.40.jpeg" price="250€" time="5h" size="25cmx25cm"/>
      <CardDisenos title="Diseño floral" description="Hermoso diseño floral con colores vibrantes." imageUrl="/galeria/WhatsApp Image 2025-03-25 at 20.34.41.jpeg" price="200€" time="4h" size="20cmx20cm"/>
      <CardDisenos title="Diseño geométrico" description="Diseño moderno con patrones geométricos." imageUrl="/galeria/WhatsApp Image 2025-03-25 at 20.48.41 (1).jpeg" price="300€" time="6h" size="30cmx30cm"/>
      <CardDisenos title="Diseño abstracto" description="Diseño abstracto con formas y colores únicos." imageUrl="/galeria/WhatsApp Image 2025-03-25 at 20.48.41 (2).jpeg" price="220€" time="5h" size="25cmx25cm"/>
      <CardDisenos title="Diseño tribal" description="Diseño tribal inspirado en culturas ancestrales." imageUrl="/galeria/WhatsApp Image 2025-03-25 at 20.48.42.jpeg" price="270€" time="5.5h" size="28cmx28cm"/>


    
  </div>
</Layout>