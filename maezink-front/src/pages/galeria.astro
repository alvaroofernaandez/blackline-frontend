  <section class="px-4 py-12 text-white max-w-4xl mx-auto  ">
    <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-5 gap-4 space-y-4">
      <GaleriaComponent images={files} client:load/>
    </div>
  </section>
</Layout>

